<h1>Все наши посты</h1>

<% @post.each do |post| %>
	<article class='card'>
		<h3 class = 'card-header'> <%= post.title %> </h3>
		<p class = 'card-body'>
			<%= post.body[0..200] + '...' %>
		</p>
		<%= link_to 'Читать далее', post_path(post), :class => 'btn btn-outline-secondary' %>
	</article>
<% end %>